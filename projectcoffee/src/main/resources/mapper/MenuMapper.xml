<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.simplecoding.projectcoffee.menu.mapper.MenuMapper">

    <select id="selectMenuList"
            parameterType="com.simplecoding.projectcoffee.common.Criteria"
            resultType="com.simplecoding.projectcoffee.menu.vo.Menu">
        SELECT * FROM MENU
        WHERE P_NAME LIKE '%'|| #{searchKeyword} ||'%'
        OFFSET #{offset} ROWS
            FETCH NEXT #{size} ROWS ONLY
    </select>

    <select id="selectMenuListTotCnt"
            parameterType="com.simplecoding.projectcoffee.common.Criteria"
            resultType="int">
        SELECT COUNT(*) FROM MENU
        WHERE P_NAME LIKE '%' || #{searchKeyword} || '%'
    </select>
    <insert id="insert"
            parameterType="com.simplecoding.projectcoffee.menu.vo.Menu">
        INSERT INTO MENU(P_UUID,P_NAME,DESCRIPTION,PRICE,IMG_URL,IS_AVAILABLE,C_DATE,SQUANTITY,CATEGORY_ID,SUBTITLE)
        VALUES(#{uuid},#{pname},#{description},#{price},#{imgUrl},#{isAvailable},SYSDATE,#{squantity},#{categoryId},#{sebtitle})
    </insert>
    <delete id="delete"
            parameterType="String">
        DELETE MENU WHERE P_UUID=#{uuid}
    </delete>
    <select id="selectMenuByCategory"
            parameterType="int"
            resultType="com.simplecoding.projectcoffee.menu.vo.Menu">

        SELECT *
        FROM MENU
        WHERE CATEGORY_ID = #{categoryId}

    </select>
</mapper>


